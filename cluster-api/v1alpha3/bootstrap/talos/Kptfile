apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: cluster-api-bootstrap-talos
upstream:
  type: git
  git:
    repo: https://github.com/bzub/kpt-pkgs
    directory: /cluster-api/v1alpha3/bootstrap/talos
    ref: main
  updateStrategy: resource-merge
pipeline:
  mutators:
    - name: set-provider-labels
      image: gcr.io/kpt-fn/set-labels:unstable
      configMap:
        cluster.x-k8s.io/provider: bootstrap-talos
        clusterctl.cluster.x-k8s.io: ""
    - name: set-labels-for-clusterctl-shared-lifecycle
      image: gcr.io/kpt-fn/set-labels:unstable
      configMap:
        clusterctl.cluster.x-k8s.io/lifecycle: shared
      selectors:
        - namespace: capi-webhook-system
        - kind: CustomResourceDefinition
        - kind: ValidatingWebhookConfiguration
        - kind: MutatingWebhookConfiguration
    - name: set-labels-for-clusterctl-core-inventory
      image: gcr.io/kpt-fn/set-labels:unstable
      configMap:
        clusterctl.cluster.x-k8s.io/core: inventory
      selectors:
        - kind: Provider
    - name: ensure-cluster-rbac-name-prefixes
      image: gcr.io/kpt-fn/ensure-name-substring:unstable
      configMap:
        prepend: cabpt-system-
      selectors:
        - kind: ClusterRole
        - kind: ClusterRoleBinding
    - name: set-cert-manager-dependencies
      image: gcr.io/kpt-fn/set-annotations:unstable
      configMap:
        config.kubernetes.io/depends-on: apps/namespaces/cert-manager/Deployment/cert-manager-webhook
      selectors:
        - kind: Certificate
        - kind: Issuer
        - kind: Deployment
  validators:
    - image: gcr.io/kpt-fn/gatekeeper:unstable
